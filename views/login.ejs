
<% include ./inc/inc-front-head %>
<style type="text/css">
.form-well {
	min-height: 20px;
	/*width: 300px;*/
	padding-left: 19px;
	padding-right: 19px;
	padding-top: 5px;
	padding-bottom: 19px;
	margin-bottom: 20px;
	background-color: #f5f5f5;
	border: 1px solid #e3e3e3;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	border-radius: 4px;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
	-moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
}

.form-text { /*width: 280px;*/

}
</style>
<div class="container">
	<div class="row">
		<div class="span5">
			<form method="post" class="form-horizontal form-well">
				<h3>系统登录</h3>
				<% if(typeof(errDesp) !== "undefined") { %>
				<div class="alert alert-error"><%= errDesp %></div>
				<% } %>
				<div class="control-group">
					<label for="uname"><span class="icon-chevron-right"></span> 用户名：</label> <input id="uname" name="uname" value="<%= uname||'' %>" class="span3" type="text" required="required" />
				</div>
				<div class="control-group">
					<label for="passwd"><span class="icon-chevron-right"></span> 登录密码：</label> <input id="passwd" name="passwd" class="span3" type="password" required="required" />
				</div>
				<div>
					<button type="submit" class="btn btn-primary">登录系统</button>
				</div>
				<div class="clearfix"></div>
			</form>
		</div>
	</div>
</div>
<% include ./inc/inc-front-foot %>