<%# 找回密码-电子邮箱-第一步:确认操作(邮件+验证码) %>
<% include ../inc/inc-uform-head %>

<% if(logined) { %>
<% include ../inc/inc-uform-logon %>
<% } else { %>
<form method="post" action="./passwd-estep2.html">
	<div class="form-group">
		<p class="form-control-static text-primary text-center"><strong>ntopic@163.com</strong></p>
		<input type="hidden" name="email" value="ntopic@163.com" required="required"/>
	</div>
	<div class="form-group">
		<label for="captcha" class="text-muted">验证码 <small>(点击图片刷新验证码)</small></label>
		<div class="nt-captcha-box clearfix">
			<input class="form-control form-control-lg nt-captcha-input float-left" type="text" name="captcha" value="" maxlength="10" required="required" autofocus="autofocus"/>
			<img class="nt-captcha-img float-right" src="https://coding.net/api/getCaptcha?code=0.36907968505130095" onclick="javascript:this.src='https://coding.net/api/getCaptcha?code='+new Date().getTime();"/>
		</div>
	</div>
	<button type="submit" class="btn btn-lg btn-outline-danger btn-block">发送重置密码邮件</button>
	<div class="text-center text-muted mt-4 mb-1"><a href="javascript:history.back(-1);" target="_top">返回</a></div>
</form>
<% } %>

