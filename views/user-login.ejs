<% include ./inc/inc-head %>

<div class="container">
	<div class="row rounded pt-3">
		<div class="col hidden-md-down"></div>
		<div class="col nt-uform-box">
			<div class="card">
				<div class="card-block">
					<div class="text-center"><h3>会员登录</h3></div>
					<hr class="my-4">
					<% if(logined) { %>
					<div class="text-muted">已登录会员：</div>
					<div class="alert alert-success text-center" role="alert"><%= uname %></div>
					<a href="/user-logout.html" class="btn btn-lg btn-outline-danger btn-block" target="_top">退出登录</a>
					<% } else { %>
					<form method="post">
						<div class="form-group">
							<label for="email" class="text-muted">登录名<small>(用户名或者电子邮箱)</small></label>
							<input class="form-control form-control-lg" type="text" name="email" placeholder="用户名/电子邮箱" maxlength="32" required="required" autofocus="autofocus"/>
						</div>

						<div class="form-group">
							<label for="passwd" class="text-muted">登录密码</label>
							<input class="form-control form-control-lg" type="password" name="passwd" placeholder="登录密码" maxlength="16" required="required"/>
						</div>

						<button type="submit" class="btn btn-lg btn-outline-primary btn-block">会员登录</button>
						<div class="text-center text-muted mt-4 mb-1">还不是会员，立即<a href="/user-regist.html" target="_top">免费注册</a>会员</div>
						<div class="text-center text-muted mt-4 mb-1">忘记登录密码，立即<a href="/forget/passwd-ctool.html" target="_top">找回密码</a></div>
					</form>
					<% } %>
				</div>
			</div>
		</div>
		<div class="col hidden-md-down"></div>
	</div>
</div>

<% include ./inc/inc-foot %>
