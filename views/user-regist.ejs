<% include ./inc/inc-head %>

<div class="ui middle aligned center aligned grid">
	<div class="column">
		<h2 class="ui teal image header">
			<div class="content">注册会员</div>
		</h2>
		<form class="ui large form" method="post">
			<div class="ui stacked segment">
				<div class="field">
					<div class="ui left icon input">
						<i class="user icon"></i>
						<input type="text" name="name" placeholder="用户名，注册后不可修改">
					</div>
				</div>
				<div class="field">
					<div class="ui left icon input">
						<i class="mail icon"></i>
						<input type="text" name="email" placeholder="电子邮箱">
					</div>
				</div>
				<div class="field">
					<div class="ui left icon input">
						<i class="lock icon"></i>
						<input type="password" name="passwd" placeholder="登录密码">
					</div>
				</div>
				<div class="ui fluid large teal submit button">会员注册</div>
			</div>
			<div class="ui error message"></div>
		</form>

		<div class="ui message">
			已经注册过会员？现在<a href="/login.html">直接登录</a>
		</div>
	</div>
</div>

<% include ./inc/inc-foot %>
