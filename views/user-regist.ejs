<% include ./inc/inc-head %>

<style type="text/css">
	body {
		background-color: #DADADA;
	}
	body > .grid {
		height: 100%;
	}
	.image {
		margin-top: -100px;
	}
	.column {
		max-width: 450px;
	}
</style>
<script>
	$(document).ready(function() {
		$('.ui.form').form({
			fields: {
				input: {
					identifier : 'name',
					rules: [{
						type   : 'empty',
						prompt : '用户名不能为空'
					}, {
						type   : 'length[6,16]',
						prompt : '登录密码长度不能少于6个字符'
					}]
				},
				email: {
					identifier : 'email',
					rules: [{
						type   : 'empty',
						prompt : '电子邮箱不能为空'
					}, {
						type   : 'email',
						prompt : '电子邮箱格式错误'
					}]
				},
				password: {
					identifier : 'passwd',
					rules: [{
						type   : 'empty',
						prompt : '登录密码不能为空'
					}, {
						type   : 'length[6]',
						prompt : '登录密码长度不能少于6个字符'
					}]
				}
			}
		});
	});
</script>

<div class="ui middle aligned center aligned grid">
	<div class="column">
		<h2 class="ui teal image header">
			<img src="<%= static_host %>/assets/logo.png" class="image"/>
			<div class="content">注册会员</div>
		</h2>
		<form class="ui large form" method="post">
			<div class="ui stacked segment">
				<div class="field">
					<div class="ui left icon input">
						<i class="user icon"></i>
						<input type="text" name="name" placeholder="用户名，注册后不可修改">
					</div>
				</div>
				<div class="field">
					<div class="ui left icon input">
						<i class="mail icon"></i>
						<input type="text" name="email" placeholder="电子邮箱">
					</div>
				</div>
				<div class="field">
					<div class="ui left icon input">
						<i class="lock icon"></i>
						<input type="password" name="passwd" placeholder="登录密码">
					</div>
				</div>
				<div class="ui fluid large teal submit button">会员注册</div>
			</div>
			<div class="ui error message"></div>
		</form>

		<div class="ui message">
			已经注册过会员？现在<a href="/login.html">直接登录</a>
		</div>
	</div>
</div>

<!--% include ./inc/inc-foot %-->
