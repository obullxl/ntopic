<% include ./inc/inc-head %>

<div class="container">
	<div class="row rounded pt-3">
		<div class="col hidden-md-down"></div>
		<div class="col nt-uform-box">
			<div class="card">
				<div class="card-block">
					<div class="text-center mb-4"><h3>会员注册</h3></div>
					<hr class="my-4">
					<% if(logined) { %>
					<div class="text-muted">已登录会员：</div>
					<div class="alert alert-success text-center" role="alert"><%= uname %></div>
					<a href="/user-logout.html" class="btn btn-lg btn-outline-danger btn-block" target="_top">退出登录</a>
					<% } else { %>
					<form method="post">
						<div class="form-group">
							<label for="uname" class="text-muted">用户名<small>(字母开头，3到16个字母和数字组成)</small></label>
							<input class="form-control form-control-lg" type="text" name="uname" placeholder="ntopic" maxlength="16" required="required" autofocus="autofocus"/>
						</div>
						<div class="form-group">
							<label for="email" class="text-muted">电子邮箱<small>(常用邮箱，用于接收验证码、找回密码)</small></label>
							<input class="form-control form-control-lg" type="email" name="email" placeholder="ntopic@163.com" maxlength="32" required="required"/>
						</div>
						<div class="form-group">
							<label for="passwd" class="text-muted">密码<small>(长度不能少于6个字符)</small></label>
							<input class="form-control form-control-lg" type="password" name="passwd" placeholder="登录密码" maxlength="16" required="required"/>
						</div>
						<div class="form-group">
							<label for="repasswd" class="text-muted">重复密码</label>
							<input class="form-control form-control-lg" type="password" name="repasswd" placeholder="重复登录密码" maxlength="16" required="required"/>
						</div>

						<button type="submit" class="btn btn-lg btn-outline-primary btn-block">提交注册</button>
						<div class="text-center text-muted mt-4 mb-1">已有账号，立即<a href="/user-login.html" target="_top">登录</a></div>
					</form>
					<% } %>
				</div>
			</div>
		</div>
		<div class="col hidden-md-down"></div>
	</div>
</div>

<% include ./inc/inc-foot %>
